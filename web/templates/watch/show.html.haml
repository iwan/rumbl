%h2= @video.title
.row
  .col-sm-7
    = content_tag :div, id: "video", data: [id: @video.id, player_id: player_id(@video)] do
  .col-sm-5
    .panel.panel-default
      .panel-heading
        %h3.panel-title Annotations
      #msg-container.panel-body.annotations
      .panel-footer
        %textarea#msg-input.form-control(rows="3" placeholder="Comment...")
        %button#msg-submit.btn.btn-primary.form-control Post
